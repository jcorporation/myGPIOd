post_install() {
  post_upgrade;
}

post_upgrade() {
  /sbin/ldconfig

  echo "myGPIOd installed"
  echo "Modify /etc/mygpiod.conf to suit your needs."

  exit 0
}

post_remove() {
  /sbin/ldconfig
}
