pkgname=mygpiod
pkgver=__VERSION__
pkgrel=0
pkgdesc="A small daemon to call scripts on GPIO events."
url="https://jcorporation.github.io/myGPIOd/"
arch="all"
license="GPL-3.0-or-later"
depends="libgpiod"
makedepends="cmake libgpiod-dev"
install="$pkgname.pre-install $pkgname.post-install"
source="mygpiod_$pkgver.orig.tar.gz"
builddir="$srcdir"
options="!check"
#no test suite

build() {
    cmake -B "$builddir/release" -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=Release -DMYGPIOD_STRIP_BINARY=OFF "$builddir"
    make -C "$builddir/release"
}

package() {
    make -C "$builddir/release" DESTDIR="$pkgdir" install
}
