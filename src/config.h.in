#ifndef CONFIG_H
#define CONFIG_H

#include <stdbool.h>
#include <time.h>

// Debug build
#cmakedefine MYGPIOD_DEBUG

// Version from cmake
#define MYGPIOD_VERSION "${PROJECT_VERSION}"

struct t_config_line {
    unsigned gpio;
    char *cmd;
    int edge;
    struct t_config_line *next;
    long last_execution;
};

struct t_config {
    struct t_config_line *head;
    struct t_config_line *tail;
    unsigned length;
    int edge;
    bool active_low;
    char *chip;
    int loglevel;
    time_t startup_time;
    bool syslog;
};

bool config_free(struct t_config *c);
bool read_config(struct t_config *config, const char *config_file);

#endif
